<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30sp"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:background="#4CAF50">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:background="@color/colorAccent"
        android:fontFamily="sans-serif-black"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="#CDDC39"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product name"
            android:layout_marginBottom="10sp"
            android:id="@+id/fProductName"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:hint="Cost"

                android:inputType="numberDecimal"
                android:layout_marginBottom="10sp"
                android:id="@+id/fCost"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date of Expiry(MM/DD/YYYY)"
                android:inputType="date"
                android:layout_marginBottom="10sp"
                android:id="@+id/fExpiry"
                />

        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:id="@+id/fDescription"
            android:lines="4"
            android:layout_marginBottom="30sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity:"
                android:textSize="20sp"


                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"

                />
        </LinearLayout>



        <Button
            android:id="@+id/fUploadImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8BC34A"
            android:layout_marginBottom="10sp"
            android:onClick="fOnClickUploadImage"
            android:text="Upload Image" />

        <Button
            android:id="@+id/Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFEB3B"
            android:layout_marginBottom="10sp"
            android:onClick="fOnClickLogin"
            android:text="Submit" />



    </LinearLayout>

</LinearLayout>